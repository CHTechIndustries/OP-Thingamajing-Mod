<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!-- [=======================[BOW OF DEATH PROJECTILE]=====================] -->
	
	<ThingDef ParentName="BaseBullet">
		<defName>DEF_GODLY_ARROW_ArrowOfDeath</defName>
		<label>arrow of death</label>

		<graphicData>
			<texPath>com.torodo.godlyweapons/Things/Projectiles/Particle_ArrowOfDeath</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<!-- Size of the Particle that is shot-->
			<drawSize>1.5</drawSize>
		</graphicData>

		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>999</damageAmountBase>
			<armorPenetrationBase>99</armorPenetrationBase>
			<!-- Amount of Power/Chance to Push a Pawn to their Feet - incapitating them-->
			<stoppingPower>1</stoppingPower>
			<!-- Velocity of Projectile (1 = Flies like a Snail / 100 = Flies like a Train)-->
			<speed>75</speed>
		</projectile>

	</ThingDef>

